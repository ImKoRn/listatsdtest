<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="primeNumber"
            type="com.imkorn.listatsdtest.model.entities.PrimeNumber"/>
    </data>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text='@{"Thread number: " + String.valueOf(primeNumber.threadId)}'
                tools:text="Thread number 2"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp"
                android:background="@drawable/shape_right_bottom_round"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="12sp"
                android:text='@{"Prime number generated: " + String.valueOf(primeNumber.number)}'
                tools:text="Prime number generated 3"
                android:textColor="@color/primaryText"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>